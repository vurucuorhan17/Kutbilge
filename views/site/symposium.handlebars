<div style="margin:80px 0px 0px 0px;">
    <div class="container" >
        <section style="margin-bottom: -80px;padding-bottom: 0px;margin-top:30px;" class="md-padding">
            <div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">Sempozyumlar</h2>
					</div>
				</div>
				<div class="col-sm-4">
					<form action="/posts/search" method="GET">
						<div class="widget">
							<div class="widget-search">
								<input class="search-input form-control" name="look" type="text" placeholder="Sempozyumlarda Ara">
								<button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
							</div>
						</div>
					</form>
				</div>
		    </div>
        </section>
        <div class="row">
            <div class="col-md-12">
                <section id="blog" class="md-padding">
                    <div class="container">
                        <div class="row">
                            <main id="main" class="col-md-12">
                                <div class="row">
										{{#each posts}}
										<div class="col-md-4">
											<div class="blog">
												<div class="blog-img">
													<img src="{{limitation post_images}}" class="img-fluid">
												</div>
												<div class="blog-content">
													<h3>{{title}}</h3>
													<p>{{truncate content 120}}</p>
													<a href="/posts/{{_id}}">Detay için Tıklayın</a>
												</div>
											</div>
										</div>
										{{/each}}
									</div>
                            </main>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>