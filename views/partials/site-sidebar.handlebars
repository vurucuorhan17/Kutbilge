<aside id="aside" class="col-md-4">

    

    <!-- Links  -->
    <div class="widget">
        <div class="widget-link">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Linkler</h3>
                </div>
                <div class="card-body">
                    <a href="http://iconst.org/">ICONST</a>
                    <a href="http://www.iconsr.org/">ICONSR</a>
                    <a href="https://dergipark.org.tr/tr/pub/bilgesci">Bilgesci</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Category -->
    <div class="widget">
        <h3 class="mb-3">Kategoriler</h3>
        <div class="widget-category">
            {{#each categories}}
            <a href="/posts/category/{{_id}}">{{name}}<span>({{num_of_posts}})</span></a>
            {{/each}}
        </div>
    </div>

    <div class="widget">
        <h3 class="mb-3">Son GÃ¶nderiler</h3>
        {{#each (limit posts 3)}}
        <!-- single post -->
        <div class="widget-post">
            <a href="/posts/{{_id}}">
                <img class="img-fluid" src="{{post_image}}" alt="">{{title}}
            </a>
            {{!--<ul class="blog-meta">
                <li>{{generateDate date "MMM DD YYYY"}}</li>
            </ul>--}}
        </div>
        {{/each}}
        <!-- /single post -->

    </div>
    <!-- /Posts sidebar -->

</aside>